/* pages/themeRecommend/themeRecommend.wxss */
@import "../../app.wxss";

.theme-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 15px;
  padding: 15px;
}

.theme-item {
  height: 120px;
  background-color: #FFF9E6;
  border-radius: 10px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
}

.theme-item.selected {
  border: 2px solid #E6A23C;
}

.theme-image {
  width: 100%;
  height: 80px;
  object-fit: cover;
}

.theme-title {
  padding: 5px;
  font-size: 12px;
  text-align: center;
}

.theme-date {
  position: absolute;
  top: 58px;
  left: 5px;
  background-color: rgba(255, 255, 255, 0.8);
  font-size: 10px;
  padding: 2px 5px;
  border-radius: 5px;
}

.instruction-text {
  text-align: center;
  color: #666;
  font-size: 12px;
  margin: 15px 0;
} 