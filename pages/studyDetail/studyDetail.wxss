/* pages/studyDetail/studyDetail.wxss */
@import "../../app.wxss";

.container {
  padding: 0 0 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.header {
  background-color: #ffd171;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  margin-bottom: 20rpx;
  width: 100%;
}

.back-icon {
  position: absolute;
  left: 30rpx;
  top: 0;
  font-size: 38rpx;
  font-weight: normal;
}

.detail-header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.detail-header text {
  font-size: 36rpx;
  font-weight: bold;
  color: #e6a23c;
}

.detail-info {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.info-item {
  display: flex;
  padding: 10rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 20rpx 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #e6a23c;
}

.task-section {
  padding: 0 20rpx;
}

.task-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.task-header {
  background-color: #fff9e6;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #e6a23c;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.task-content {
  padding: 20rpx 30rpx;
}

.task-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: normal;
  word-break: break-word;
}

.card-section {
  padding: 0 20rpx;
}

.card-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  border-left: 4px solid #4caf50;
}

.card-header {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #4caf50;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.card-content {
  padding: 20rpx 30rpx;
}

.card-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: normal;
  word-break: break-word;
}

.four-plants {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 15px;
}

.plant-item {
  width: 45%;
  height: 100px;
  background-color: #FFF9E6;
  border-radius: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
}

.plant-image {
  width: 80%;
  height: 80%;
  object-fit: contain;
} 