/* pages/ceshi/ceshi.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
  background-color: #FFF8E1;
}

/* 步骤条样式 */
.step-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 40rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #E0B878;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.step.active .step-circle {
  background-color: #E0B878;
}

.step-line {
  flex: 1;
  height: 2px;
  background-color: #E0B878;
  margin: 0 10rpx;
}

.step-text {
  font-size: 26rpx;
  color: #333;
}

/* 选项卡样式 */
.tab-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background-color: #f5f5f5;
  border-radius: 10rpx 10rpx 0 0;
}

.tab-item.active {
  background-color: #FFCE64;
  color: white;
  font-weight: bold;
}

/* 内容区样式 */
.content-area {
  flex: 1;
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  overflow: auto;
}

/* 信息区域样式 */
.info-section {
  margin-bottom: 30rpx;
  background-color: #FFFCF0;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section-title {
  font-weight: bold;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #FFCE64;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

/* 孩子信息样式 */
.child-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.child-number {
  width: 40rpx;
  height: 40rpx;
  background-color: #FFCE64;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  margin-right: 20rpx;
}

.gender-select {
  display: flex;
  margin-right: 20rpx;
}

.gender-btn {
  padding: 10rpx 30rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.gender-btn.active {
  background-color: #FFCE64;
  color: white;
  border-color: #FFCE64;
}

.age-input {
  border: 1px solid #ddd;
  padding: 10rpx;
  width: 150rpx;
  border-radius: 8rpx;
}

.delete-btn {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff6b6b;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  font-size: 28rpx;
}

/* 地点选择样式 */
.location-inputs {
  display: flex;
  justify-content: space-between;
}

.location-picker {
  width: 300rpx;
  padding: 20rpx;
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

/* 时长选择样式 */
.duration-options {
  display: flex;
  justify-content: space-between;
}

.duration-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  margin: 0 10rpx;
  background-color: white;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.duration-btn:first-child {
  margin-left: 0;
}

.duration-btn:last-child {
  margin-right: 0;
}

.duration-btn.active {
  background-color: #FFCE64;
  color: white;
  border-color: #FFCE64;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 20rpx 0;
  background-color: #FFCE64;
  color: white;
  font-weight: bold;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

/* 分析内容区 */
.analysis-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.loading-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #888;
  font-style: italic;
}

.response-content {
  flex: 1;
  white-space: pre-wrap;
  word-break: break-all;
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #FFFCF0;
  min-height: 300rpx;
  max-height: 600rpx;
}

/* 参考选项样式 */
.reference-options {
  margin-top: 30rpx;
  background-color: #FFFCF0;
  border-radius: 10rpx;
  padding: 20rpx;
}

.options-list {
  margin-bottom: 20rpx;
}

.option-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  align-items: center;
}

.option-item.selected {
  background-color: #FFF2D1;
}

.option-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2px solid #FFCE64;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.option-checkbox.checked {
  background-color: #FFCE64;
  position: relative;
}

.option-checkbox.checked::after {
  content: '✓';
  position: absolute;
  color: white;
  font-size: 24rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.option-text {
  flex: 1;
}

.generate-materials-btn {
  background-color: #FFCE64;
  color: white;
  font-weight: bold;
  border-radius: 10rpx;
  width: 100%;
}

/* 导读材料区域 */
.materials-content {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.empty-materials {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  text-align: center;
  padding: 40rpx;
}

.regenerate-btn {
  margin-top: 20rpx;
  background-color: #FFCE64;
  color: white;
  font-weight: bold;
  border-radius: 10rpx;
}