/* pages/ceshi/ceshi.wxss */
.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 100vh;
}

.service-selector {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.picker {
  padding: 10rpx;
}

.input-section {
  margin-bottom: 20rpx;
  width: 100%;
}

.input-area {
  width: 100%;
  height: 240rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.button-group button {
  width: 45%;
}

.response-section {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.response-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.loading-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.loading-text {
  color: #888;
  font-style: italic;
}

.response-content {
  white-space: pre-wrap;
  word-break: break-all;
  flex: 1;
  min-height: 400rpx;
  max-height: calc(100vh - 350rpx);
  border: 1px solid #eee;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: white;
}