/* pages/help/help.wxss */
.container {
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  box-sizing: border-box;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.header {
  width: 100%;
  height: 100rpx;
  background-color: #FDEAAA;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.help-content {
  margin-top: 120rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.help-list {
  width: 100%;
}

.help-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.help-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.help-item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transition: transform 0.3s;
}

.arrow-down {
  transform: rotate(45deg);
}

.arrow-up {
  transform: rotate(-135deg);
}

.help-item-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.help-item-content.expanded {
  max-height: 1000rpx;
  padding: 0 30rpx 30rpx;
}

.tips-section, .contact-section {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tips-title, .contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  line-height: 1.8;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.contact-button {
  margin-top: 20rpx;
  background-color: #E6A23C;
  color: white;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 30rpx;
} 