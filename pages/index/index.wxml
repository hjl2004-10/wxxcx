<!--index.wxml-->
<view class="container">
  <view class="header">亲子研学智能规划系统</view>

  <view class="banner">
    <image class="banner-image" src="/images/study_theme.png" mode="aspectFill"></image>
  </view>

  <view class="menu-box">
    <view class="menu-item" bindtap="goToBasicInfo">
      <image class="menu-icon" src="/images/kid_icon.png" mode="aspectFit"></image>
      <text class="menu-text">开始研学规划</text>
    </view>
    
    <view class="menu-item" bindtap="goToThemeRecommend">
      <image class="menu-icon" src="/images/study_theme.png" mode="aspectFit"></image>
      <text class="menu-text">研学主题推荐</text>
    </view>
    
    <view class="menu-item" bindtap="goToMyProfile">
      <image class="menu-icon" src="/images/avatar.png" mode="aspectFit"></image>
      <text class="menu-text">我的研学</text>
    </view>
  </view>

  <view class="intro-text">
    <view class="intro-title">智能亲子研学规划</view>
    <view class="intro-desc">根据孩子年龄特点和目的地特性，为您智能规划完整的研学方案，包含研学前导读、研学中活动和研学后延伸。</view>
  </view>
</view> 