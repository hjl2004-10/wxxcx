/* pages/basicInfo/basicInfo.wxss */
@import "../../app.wxss";

.kid-info-item {
  display: flex;
  align-items: center;
  background-color: #FFF9E6;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}

.input-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0 10px;
}

.label {
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.add-btn {
  width: 35px;
  height: 35px;
  background-color: #F8C457;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.add-btn .icon {
  width: 20px;
  height: 20px;
}

.venue-type, .specific-venue {
  margin-bottom: 15px;
}

.duration-selector {
  display: flex;
  justify-content: space-between;
}

.duration-option {
  flex: 1;
  height: 40px;
  background-color: #FFF9E6;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 5px;
  border-radius: 6px;
}

.duration-option.active {
  background-color: #F8C457;
  font-weight: bold;
} 