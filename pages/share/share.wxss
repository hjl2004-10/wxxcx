/* pages/share/share.wxss */
@import "../../app.wxss";

.upload-box {
  background-color: #FFF9E6;
  border-radius: 10px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}

.upload-text {
  font-size: 14px;
  color: #666;
}

.reading-list, .spot-list {
  padding: 5px 0;
}

.reading-item, .spot-item {
  font-size: 14px;
  line-height: 1.5;
  padding: 5px 0;
}

.share-btn {
  background-color: #E6A23C;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: bold;
  border-radius: 24px;
  margin: 20px 15px;
} 