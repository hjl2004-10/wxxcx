/* pages/share/share.wxss */
@import "../../app.wxss";

.container {
  padding: 0;
  background-color: #FDEAAA;
  min-height: 100vh;
}


.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #E6A23C;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  padding: 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-tips {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 研学列表样式 */
.study-list {
  padding: 20rpx;
}

.study-item {
  background-color: #FFF9E6;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.study-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-bottom: 16rpx;
}

.study-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.study-date {
  font-size: 24rpx;
  color: #999;
}

.study-content {
  margin-bottom: 20rpx;
}

.study-image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.study-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.study-footer {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  padding-top: 16rpx;
}

.footer-btn {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background-color: rgba(230, 162, 60, 0.1);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.footer-btn text {
  font-size: 24rpx;
  color: #E6A23C;
}

.upload-box {
  background-color: #FFF9E6;
  border-radius: 10px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}

.upload-text {
  font-size: 14px;
  color: #666;
}

.reading-list, .spot-list {
  padding: 5px 0;
}

.reading-item, .spot-item {
  font-size: 14px;
  line-height: 1.5;
  padding: 5px 0;
}

.share-btn {
  background-color: #E6A23C;
  color: #FFFFFF;
  font-size: 16px;
  font-weight: bold;
  border-radius: 24px;
  margin: 20px 15px;
} 